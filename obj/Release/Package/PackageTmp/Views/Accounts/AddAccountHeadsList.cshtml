@model HospitalManagementSystem.Models.AccountsModels

@{
    ViewBag.Title = "AddAccountHeadsList";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Test Panels</title>

</head>
<body>
    <div class="page-body">
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="page-body-wrapper">
                <div class="container-fluid">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @*<h4>AccountsModels</h4>*@
                        <hr />
                        <div class="row">
                            <div class="col-md-offset-2 col-md-3">
                                @Html.ActionLink("Account List", "ShowAccountsList", new object { }, new { @class = "btn btn-outline-primary fa-plus-circlesssss" })
                            </div>
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AccID, "Account Head", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("ddlheads", ViewBag.HeadList as SelectList, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Accounts, "Account Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Accounts, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER ACCOUNT NAME" } })
                                        @Html.ValidationMessageFor(model => model.Accounts, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-outline-success-2x" />
                            </div>
                        </div>


                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
</body>
</html>