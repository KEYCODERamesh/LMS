<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Center Detail</title>


</head>
<body>
    <div class="page-body">
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="page-body-wrapper">
                <div class="container-fluid">
                    @using (Html.BeginForm() )
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        <div class="row">
                            <div class="col-md-3">
                                <h4>Referal Details</h4>
                            </div>
                            <div class="col-md-2">
                                @Html.ActionLink("Referal List", "ShowReferals", new object { }, new { @class = "btn btn-info-gradien" })
                            </div>
                            <div class="col-md-6">
                                <h4>@ViewBag.Message</h4>
                            </div>

                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RefType, "Referal Type", htmlAttributes: new { @class = "control-label col-md-4", style = "color:#ff0000" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(m => m.RefType, new SelectList(Enum.GetValues(typeof(ReferalType))), "--Select Referal Type--", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.RefType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Referal_Name, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ff0000" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Referal_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Referal Name", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Referal_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MobileNos, "Contact No.", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.MobileNos, new { htmlAttributes = new { @class = "form-control", placeholder = "Mobile Number", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.MobileNos, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Complete Address Detail" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ComP, "Incen. %", htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ff0000" })
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.ComP, new { htmlAttributes = new { type = "number", @class = "form-control", placeholder = "Incentive %" } })
                                        @Html.ValidationMessageFor(model => model.ComP,"",new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Ref_Status, "Current Status", htmlAttributes: new { @class = "control-label col-md-4", style = "color:#ff0000" })
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.Ref_Status, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Ref_Status,"",new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    &ensp;
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" id="btnsavedetails" value="Save" class="btn btn-outline-success-2x" name="Command"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    }

                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnsavedetails').click(function () {
                window.location.reload();
            });
        });
    </script>
</body>
</html>
