@model HospitalManagementSystem.LabPurchaseDT

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stock Entry</title>
    @*<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>*@
    <script src="~/Scripts/jquery-2.0.0.min.js" type="text/javascript"></script>
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />*@
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    
</head>
<body>
    <div class="page-body">
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="page-body-wrapper">
                <div class="container-fluid">
                    <div>
                        @Html.ActionLink("Purchase List", "Index", new object { }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Add New Items", "AddProducts", "StockEntry", new object { }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Products", "ShowProducts", "StockEntry", new object { }, new { @class = "btn btn-primary" })
                        @*@Html.ActionLink("New Vendor", "AddVendor", "StockEntry", new object { }, new { @class = "btn btn-primary" })*@
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddModal">Add Product</a>
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Vendor</a>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.VendorID, "Vendor Name", htmlAttributes: new { @class = "control-label col-md-3" })


                                        <div class="col-md-10">
                                            @Html.DropDownList("VendorID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.VendorID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.BillNo, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.BillNo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BillNo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.BillDate, "Bill Date", htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.BillDate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BillDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-md-6">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ITEMID, "ITEM NAME", htmlAttributes: new { @class = "control-label col-md-5" })

                                                <div class="col-md-10">
                                                    @Html.DropDownList("ITEMID", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.ITEMID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="col-md-3">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>*@
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.QTY, "Quantity", htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.QTY, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.QTY, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Units, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Units, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Units, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.GSTP, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.GSTP, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.GSTP, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.GSTMAT, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.GSTMAT, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.GSTMAT, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.DisPer, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.DisPer, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DisPer, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Grands, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Grands, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Grands, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="ADD" class="btn btn-primary" />
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-success" />
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <table class="table table-responsive">
                                        <tr>
                                            <th>ITEM NAME</th>

                                            <th>
                                                QTY
                                            </th>
                                            <th>
                                                Unit
                                            </th>
                                            <th>
                                                Rate
                                            </th>
                                            <th>
                                                DIs %
                                            </th>
                                            <th>
                                                GST %
                                            </th>
                                            <th>
                                                GST Amount
                                            </th>
                                            <th>
                                                Amount
                                            </th>
                                        </tr>



                                    </table>
                                </div>

                            </div>


                        </div>
                    }
                </div>

                <div class="modal fade bd-example-modal-lg" id="myModal">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title"> My Modal title</h3>
                                <a href="#" class="close" data-dismiss="modal">&times;</a>
                            </div>
                            <div class="modal-body" id="modalbody">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-2">
                                            <b>Name: </b> @Html.TextBox("VendorName", "", new { @class = "control-label col-md-5" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                <a href="#" class="btn btn-success" onclick="DeleteProduct()">Confirm</a>
                            </div>
                        </div>

                    </div>

                </div>


                <!---- PRODUCT ADD MODALS---------->
                <div class="modal fade bd-example-modal-lg" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Add Products</h3>
                                <a href="#" data-dismiss="modal" class="close">&times;</a>
                            </div>
                            <div class="modal-body">

                                <form id="myForm">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Item Name</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" id="txtName" name="name" placeholder="Item Name" />
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Opening Qunatity</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" id="txtqty" name="name" placeholder="QTY" />
                                            </div>
                                        </div>


                                    </div>
                                    <br />
                                    <div class="modal-footer">
                                        <div class="col-md-2">
                                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                        </div>
                                        <div class="col-md-2">
                                            @*<input type="reset" value="submit" class="btn btn-success" id="btnsubmit" />*@
                                            <a href="#" class="btn btn-success" onclick="AddProduct()">Save</a>
                                        </div>
                                    </div>

                                </form>


                                <div style="text-align:center;display:none" id="loaderdiv">
                                    <img src="~/Content/assets/images/loader.gif" />
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">



                        </div>

                    </div>
                </div>

                <!---- PRODUCT ADD MODALS finished---------->

            </div>
        </div>
    </div>



    <script>

        var AddProduct = function () {
            $("#loaderdiv").show();
            var myformData = $("myForm").serialize();
            var txtitemName = $("#txtName");
            var txtopqty = $("#txtqty");
            $.ajax({
                type: "POST",
                url: "/StockEntry/InsertCustomer",
                data: '{ItemName: "' + txtitemName.val() + '", OPQTY: "' + txtopqty.val() + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function () {

                    $("#AddModal").find("#loaderdiv").hide();
                    $("#AddModal").modal('hide');
                    txtitemName.val("");
                    txtopqty.val("");
                    $("#AddModal").modal('hide');
                    setInterval('location.reload()', 500);
                }
            })

        }
    </script>
</body>
</html>