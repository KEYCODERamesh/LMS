@model HospitalManagementSystem.Models.MyLabTestList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Center Detail</title>


</head>
<body>
    <div class="page-body">
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="page-body-wrapper">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div>
                            @Html.ActionLink("Back to Test List", "Index", new object { }, new { @class = "btn btn-info-gradien" })
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-4">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Test_Name, "* Test Name", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Test_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER TEST NAME", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Test_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.T_ShortName, "Test Short Name", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.T_ShortName, new { htmlAttributes = new { @class = "form-control", placeholder = "SHORT NAME" } })
                                        @Html.ValidationMessageFor(model => model.T_ShortName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Group_Name, "*Category", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(M => M.Group_ID, new SelectList(Model.GroupList, "value", "text"), "--Select Group--", htmlAttributes: new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.Group_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>







                        <div class="row">
                            <div class="col-md-4">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Method_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Method_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER TEST METHOD NAME" } })
                                        @Html.ValidationMessageFor(model => model.Method_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Instruemnt, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Instruemnt, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER INSTRUMENT NAME" } })
                                        @Html.ValidationMessageFor(model => model.Instruemnt, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER TEST COMMENTS" } })
                                        @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Test_Rate, "* Rate", htmlAttributes: new { @class = "control-label col-md-2", required = "required" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Test_Rate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Test_Rate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">

                            </div>
                            <div class="col-md-4">

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-outline-success-2x" />
                            </div>
                        </div>
                    </div>
                    }


                </div>
            </div>
        </div>
    </div>
</body>
</html>