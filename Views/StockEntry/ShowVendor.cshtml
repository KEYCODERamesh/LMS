@model IEnumerable<HospitalManagementSystem.Models.VendorModel>

@{
    ViewBag.Title = "ShowVendor";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vendor List</title>

    <script type="text/javascript">
        $(document).ready(function () {

            $(".AddPopUp").click(function (e) {
                $("#MyPopUp").modal('show');

            });
        });

    </script>
</head>
<body>
    



    <div class="page-body">
        <div class="container-fluid">
            <div class="page-body-wrapper">
                <div class="container-fluid">
                    <br />
                    <p>
                        @Html.ActionLink("Add New Vendor", "AddVendor", new object { }, new { @class = "btn btn-info-gradien" })
                    </p>
                    <hr />
                   
                   @*<div class="AddPopUp">
                       @Html.Label("Add PopUp")
                   </div>
                    <div class="modal fade" id="MyPopUp" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <div class="modal-body">
                                    modal controls etc...

                                </div>

                            </div>

                        </div>


                    </div>*@

                    <table class="table table-bordered table-sm">
                        <tr>
                            <th>Action ?</th>
                            <th>
                                Vendor Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GSTIN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StateCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OpBal)
                            </th>


                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink("Edit", "EditVendor", new { id = item.VID }) |
                                    @Html.ActionLink("Delete", "DeleteVendor", new { id = item.VID })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VendorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GSTIN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OpBal)
                                </td>


                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>



</body>

</html>